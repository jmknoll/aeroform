<div id="clearance" class="sign-in">
  <h2><%= t(".title") %></h2>

  <%= form_for :session, url: session_path, :html => { :class => "ui form" } do |form| %>
    <div class="text-field field">
      <%= form.label :email_ %>
      <%= form.text_field :email, type: 'text' %>
    </div>

    <div class="password-field field">
      <%= form.label :password %>
      <%= form.password_field :password %>
    </div>

    <div class="submit-field field">
      <%= form.submit class: "ui button" %>
    </div>

    <div class="other-links">
      <p><%= link_to t(".Forgot Your Password?"), new_password_path %>
      <p>Don't have an account?
        <% if Clearance.configuration.allow_sign_up? %>
          <%= link_to t(".sign_up"), sign_up_path %>
        <% end %>
      </p>
    </div>
  <% end %>


</div>
